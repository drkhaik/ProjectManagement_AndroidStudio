<!-- res/layout/dialog_project.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/dialog_background"
    android:orientation="vertical"
    android:gravity="center">

    <EditText
        android:id="@+id/txtDevName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dev Name"
        android:padding="10dp"
        />

    <Spinner
        android:id="@+id/spinnerTasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/custom_spinner_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:gravity="start"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estimate Days"
            android:textStyle="bold"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/estimate_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
             />
    </LinearLayout>

    <EditText
        android:id="@+id/txtStartDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Start Date (dd/mm/yyyy)"
        android:padding="10dp"
        />

    <EditText
        android:id="@+id/txtEndDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="End Date (dd/mm/yyyy)"
        android:padding="10dp"
        />
</LinearLayout>